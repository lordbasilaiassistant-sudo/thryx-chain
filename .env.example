# ============================================================
# THRYX Mainnet Configuration
# Copy this to .env and fill in your values
# NEVER commit .env to version control!
# ============================================================

# ==================== Chain Configuration ====================
THRYX_CHAIN_ID=77777
THRYX_RPC_URL=http://localhost:8545

# ==================== Deployer Account ====================
# The main deployer account - use a fresh wallet, not a default key!
DEPLOYER_PRIVATE_KEY=

# ==================== Agent Private Keys ====================
# Each agent needs its own wallet. Generate fresh keys for production!
# Use: node -e "console.log('0x' + require('crypto').randomBytes(32).toString('hex'))"
PRIVATE_KEY_ORACLE=
PRIVATE_KEY_ARBITRAGE=
PRIVATE_KEY_LIQUIDITY=
PRIVATE_KEY_GOVERNANCE=
PRIVATE_KEY_MONITOR=
PRIVATE_KEY_SECURITY=
PRIVATE_KEY_INTENT=
PRIVATE_KEY_BRIDGE=
PRIVATE_KEY_WITHDRAWAL=

# ==================== Bridge Configuration ====================
# Base Mainnet (for L1 settlement)
BASE_RPC_URL=https://mainnet.base.org
BASE_PRIVATE_KEY=
BASE_BRIDGE_CONTRACT=

# L1 Deposit Contract on Base
L1_DEPOSIT_CONTRACT=

# ==================== Relayer Configuration ====================
# For gasless transactions (welcome bonus, etc.)
RELAYER_PRIVATE_KEY=

# ==================== External APIs ====================
# Optional - for enhanced oracle data
COINGECKO_API_KEY=
ALCHEMY_API_KEY=
BASESCAN_API_KEY=

# ==================== Monitoring ====================
PROMETHEUS_ENABLED=true
GRAFANA_ADMIN_PASSWORD=

# ==================== Security ====================
# Rate limiting
MAX_RPC_REQUESTS_PER_MINUTE=1000

# Alert webhook (Discord/Slack)
ALERT_WEBHOOK_URL=
